<div id="comments">
	<ul>
		{% if comments|length > 0 %}
			{% for comment in comments %}

				<li>
					<p class="comment-header">
						{{ comment.author.username }} lvl{{ comment.author.profile.level }}
						{{ comment.date|date("d F, Y H:i") }}
					</p>
					<p class="comment-content">{{ comment.content }}</p>
				</li>
			{% endfor %}
		{% endif %}
	</ul>

	{% if form is defined and signed_in == true %}
		{{ form(form) }}
	{% endif %}

</div>